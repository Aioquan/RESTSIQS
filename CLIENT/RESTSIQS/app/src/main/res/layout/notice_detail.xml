<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" tools:context="devouty.restsiqs.NoticeDetailActivity">

        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

        </ScrollView>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notice_detail_title"
                android:textSize="35dp"
                android:layout_alignParentTop="true" android:gravity="top" android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/notice_detail_title" android:layout_alignParentStart="true">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/notice_detail_context"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
