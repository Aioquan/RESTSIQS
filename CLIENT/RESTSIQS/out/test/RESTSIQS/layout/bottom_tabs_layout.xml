<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <!-- course -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10">

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/courseList"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <!-- menu -->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">
        <!-- notice -->
        <LinearLayout
                android:id="@+id/tabs_notice"
                style="@style/bottom_tabs_ll"
                >

            <Image
                    android:id="@+id/im_notice"
                    style="@style/bottom_tabs_image"
                    android:src="@drawable/image_notice"/>

            <TextView
                    style="@style/bottom_tabs_tv"
                    android:text="@string/btn_notice"
                    android:id="@+id/btn_notice"
                    />

        </LinearLayout>

        <!-- course -->
        <LinearLayout
                android:id="@+id/tabs_course"
                style="@style/bottom_tabs_ll"
                >
            <Image
                    android:id="@+id/im_course"
                    style="@style/bottom_tabs_image"
                    android:src="@drawable/image_course"
                    />

            <TextView
                    style="@style/bottom_tabs_tv"
                    android:text="@string/btn_course"
                    android:id="@+id/btn_course"
                    />
        </LinearLayout>

        <!-- TE -->
        <LinearLayout
                android:id="@+id/tabs_te"
                style="@style/bottom_tabs_ll"
                >
            <Image
                    android:id="@+id/im_te"
                    style="@style/bottom_tabs_image"
                    android:src="@drawable/image_te"
                    />

            <TextView
                    style="@style/bottom_tabs_tv"
                    android:text="@string/btn_course"
                    android:id="@+id/btn_te"
                    />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
